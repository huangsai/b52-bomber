<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_popup_shape"
        android:divider="@drawable/base_linear_ver_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/more_dialog_first_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_10dp"
            android:textColor="#3478f6"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/more_dialog_second_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_10dp"
            android:textColor="#3478f6"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/more_dialog_third_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_10dp"
            android:textColor="#3478f6"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/base_popup_shape">

        <TextView
            android:id="@+id/more_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_10dp"
            android:text="取消"
            android:textColor="#3478f6"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
