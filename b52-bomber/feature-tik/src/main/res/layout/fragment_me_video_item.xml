<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_user_video_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_172dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_like_status"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/video_like_selector" />

    <TextView
        android:id="@+id/tv_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="6dp"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_like_status"
        android:layout_alignBottom="@+id/iv_like_status"
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@+id/iv_like_status"
        android:layout_toRightOf="@+id/iv_like_status"
        android:includeFontPadding="false"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="@dimen/font_11sp" />

    <ImageView
        android:id="@+id/img_play"
        style="@style/CommonImage"
        android:layout_centerInParent="true"
        android:src="@drawable/fl_guan" />

    <RelativeLayout
        android:id="@+id/video_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_video_check_status" />
    </RelativeLayout>
</RelativeLayout>
