<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_search"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_40dp"
    android:gravity="center_vertical"
    android:background="@color/main_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:src="@drawable/gg_fanhui" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/searchview_set"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_5dp"
        android:paddingRight="@dimen/size_5dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingRight="@dimen/size_8dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/search_input_hint"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#9b9b9b"
            android:textSize="@dimen/font_17sp" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="@dimen/size_14dp"
            android:layout_height="@dimen/size_14dp"
            android:src="@drawable/sy_quxiaochacha01" />
    </LinearLayout>

    <TextView
        android:id="@+id/search_done"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/search"
        android:textColor="#ffffff"
        android:textSize="15dp" />
</LinearLayout>