<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@drawable/sharecontent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/font_20sp"
        android:orientation="vertical">
      <TextView
          android:id="@+id/shareTo"
          android:layout_marginTop="@dimen/size_10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="16dp"
          android:layout_marginLeft="@dimen/size_10dp"
          android:text="分享至"
          android:textColor="@color/white"

          ></TextView>
        <ImageView
            android:id="@+id/dismiss"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/sy_quxiaochacha_bai"
            android:layout_marginLeft="@dimen/size_10dp"
            android:scaleType="centerInside"
            ></ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/shareTo"
        android:layout_marginTop="10dp"
         android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/sharecontent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"

             android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id = "@+id/qq_Image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_80dp"
                     android:src="@drawable/ps_qq"
                    android:drawablePadding="10dip"
                    />
                 <TextView
                    android:id = "@+id/love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/qq_Image"
                    android:text="QQ"

                    android:textSize="16dp"
                    android:textColor="#ffffff"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
             android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:id="@+id/weixin_share"
                     android:layout_width="wrap_content"
                    android:layout_height="80dp"

                    android:src="@drawable/ps_weixin1"
                    android:drawablePadding="10dip"
                    />
                <TextView
                    android:layout_below="@+id/weixin_share"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="1dp"
                     android:text="微信"

                    android:textSize="16dp"
                    android:textColor="#ffffff"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
             android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:id="@+id/copy_link_share"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"

                    android:src="@drawable/ps_fuzhilianjie"
                    android:drawablePadding="10dip"
                    />
                <TextView
                    android:layout_below="@+id/copy_link_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="1dp"
                    android:text="复制链接"
                    android:textSize="16dp"
                    android:textColor="#ffffff"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
