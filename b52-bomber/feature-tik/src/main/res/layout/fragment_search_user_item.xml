<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_user_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heartImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_20sp"
            android:src="@drawable/default_profile"

            />

        <TextView
            android:id="@+id/nofi_bottom"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/nofi"
            android:layout_alignLeft="@+id/nofi"
            android:layout_marginLeft="@dimen/font_20sp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/heartImage"
            android:gravity="left"
            android:text="吴晓梅"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ids"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/nofi_bottom"
            android:layout_alignLeft="@+id/nofi"
            android:layout_marginLeft="@dimen/font_20sp"
            android:layout_toRightOf="@+id/heartImage"

            android:gravity="left"
            android:text="id:88888"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/nofi_date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ids"
            android:layout_alignLeft="@+id/ids"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="粉丝1"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fensi_count"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ids"
            android:layout_marginLeft="@dimen/font_20sp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ids"
            android:gravity="center"
            android:text="粉丝: 2"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fensi_image"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="+关注"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>
