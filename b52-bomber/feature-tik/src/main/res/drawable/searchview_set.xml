<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="#0d0d1e" />
    <!--设置渐变-->
    <gradient
        android:startColor="#0d0d1e"
        android:endColor="#0d0d1e"
        android:angle="90" />
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="8px" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>