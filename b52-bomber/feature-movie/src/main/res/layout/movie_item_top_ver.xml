<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_top_movie_ver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_100dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/txt_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_label"
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/size_8dp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="影片标题"
        android:includeFontPadding="false"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/font_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_cover" />

    <TextView
        android:id="@+id/txt_desc"
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/size_7dp"
        android:gravity="center"
        android:text="影片描述"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"
        android:maxEms="7"
        android:ellipsize="end"
        android:textColor="@color/color_text_919095"
        android:textSize="@dimen/font_10sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_label"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>