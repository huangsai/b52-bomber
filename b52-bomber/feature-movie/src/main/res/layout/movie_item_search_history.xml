<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/history_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_search_history_label"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/history_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_search_history_clear"
        android:textColor="@color/color_text_848388"
        android:textSize="@dimen/font_14sp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mobile.app.bomber.common.base.views.ShowButtonLayout
        android:id="@+id/history_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/history_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:background="@color/movie_line_color"
        app:layout_constraintTop_toBottomOf="@id/history_show" />
</androidx.constraintlayout.widget.ConstraintLayout>