<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/size_12dp"
    android:paddingTop="@dimen/size_10dp">


    <com.youth.banner.Banner
        android:id="@+id/banner_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_150dp"
        app:banner_indicator_selected_color="@color/color_text_ffcc00"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/banner_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_2dp"
        android:layout_marginLeft="@dimen/size_32dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_text_919095"
        android:textSize="@dimen/font_11sp"
        app:layout_constraintTop_toBottomOf="@id/banner_img"
        tools:text="轮播图标题" />

</LinearLayout>