<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/size_16dp"
        android:id="@+id/recommend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_search_recommend_label"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mobile.app.bomber.common.base.views.ShowButtonLayout
        android:id="@+id/recommend_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_label" />

</androidx.constraintlayout.widget.ConstraintLayout>