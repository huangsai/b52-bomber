<resources>

    <style name="movie_TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:textColor">@color/movie_color_movie_tab_text</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="movie_BeautifulTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_14sp</item>
    </style>

    <style name="movie_PlayerMovieActionText" parent="WrapWrap">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:drawablePadding">@dimen/size_4dp</item>
    </style>

    <style name="movie_PlayerMovieCommentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_24dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="movie_PlayerCommentProfile">
        <item name="android:layout_width">@dimen/size_34dp</item>
        <item name="android:layout_height">@dimen/size_34dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="movie_ExoMediaButton" parent="ExoMediaButton.Pause">
        <item name="android:layout_width">@dimen/size_30dp</item>
        <item name="android:layout_height">@dimen/size_30dp</item>
    </style>

    <style name="movie_PlayerControlLayout">
        <item name="android:layout_height">@dimen/size_20dp</item>
        <item name="android:layout_marginBottom">@dimen/size_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="movie_ControlText" parent="WrapWrap">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="movie_PlayerControlRadio">
        <item name="android:layout_width">@dimen/size_78dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/movie_player_option_radio</item>
    </style>

</resources>
